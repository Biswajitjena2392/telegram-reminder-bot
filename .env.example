# .env.example
# Copy this file to `.env` and fill in the actual values

# Telegram Bot Token (from BotFather)
BOT_TOKEN=your-telegram-bot-token-here

# Google Sheets ID (the long string from your sheet's URL)
SHEET_ID=your-google-sheet-id-here

# Google Service Account JSON (paste contents as single line JSON)
GOOGLE_CREDS={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n","client_email":"...","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"..."}
